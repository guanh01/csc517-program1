

<h1>Listing Instructors</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.name %></td>
        <td><%= instructor.email %></td>
        <td><%= instructor.type %></td>
        <td><%= link_to 'Show', instructor ,class: 'btn btn-default btn-sm' %></td>
        <!--<td><%= link_to 'Edit', edit_instructor_path(instructor) ,class: 'btn btn-default btn-sm'%></td>-->
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-default btn-sm'%></td>
        <% if current_user.is_a? Admin%>
          <td><%= link_to 'Add to Course', new_teachment_path(:instructor_id => instructor.id) , class: 'btn btn-default btn-sm'%></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

