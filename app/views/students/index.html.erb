<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.type %></td>
        <td><%= link_to 'Show', student , class: 'btn btn-default btn-sm'%></td>
        <!--<td><%= link_to 'Edit', edit_student_path(student) , class: 'btn btn-default btn-sm'%></td>-->
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-default btn-sm'%></td>
        <% if current_user.is_a? Admin%>
          <td><%= link_to 'Add to Course', new_enrollment_path(:student_id => student.id) , class: 'btn btn-default btn-sm'%></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


