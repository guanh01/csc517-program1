<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.type %></td>
        <td><%= link_to 'Show', user , class: 'btn btn-default btn-sm'%></td>
        <!--<td><%= link_to 'Edit', edit_user_path(user) , class: 'btn btn-default btn-sm'%></td>-->
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-default btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

