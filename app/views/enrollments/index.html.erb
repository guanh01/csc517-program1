
<h1>Listing Enrollments</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th>Course title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.student.name %></td>
        <td><%= enrollment.course.course_number %></td>
        <td><%= enrollment.course.title %></td>
        <td><%= enrollment.status %></td>
        <td><%= link_to 'Show', enrollment , class: 'btn btn-default btn-sm'%></td>
        <!--<td><%= link_to 'Edit', edit_enrollment_path(enrollment) ,class: 'btn btn-default btn-sm'%></td>-->
        <%if enrollment.status == "Pending"%>
                      <td>
                        <%= form_for(enrollment) do |f| %>
                            <%= f.hidden_field :status, :value => "Approved" %>
                          <div class="actions" , style="float:left;">
                            <%= f.submit :Approve , class: "btn btn-primary btn-sm"%>
                          </div>
                        <%end%>
                        <%= form_for(enrollment) do |f| %>
                            <%= f.hidden_field :status, :value => "Denied" %>
                            <div class="actions" , style="float:left;">
                            <%= f.submit :Deny, class: "btn btn-primary btn-sm" %>
                            </div>
                          <div style="clear:both;">
                          </div>
                        <%end%>
                      </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

