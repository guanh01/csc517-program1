<h1>Listing Admins</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= admin.type %></td>
        <td><%= link_to 'Show', admin ,class: 'btn btn-default btn-sm'%></td>
        <!--<td><%= link_to 'Edit', edit_admin_path(admin) ,class: 'btn btn-default btn-sm'%></td>-->
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-default btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

